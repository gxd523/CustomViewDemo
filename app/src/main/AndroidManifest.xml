<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.customview">

    <application
        android:name=".MyApplication"
        android:icon="@android:mipmap/sym_def_app_icon"
        android:label="CustomViewDemo"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".scroller.ScrollerActivity" />
        <activity android:name=".surface.SurfaceActivity" />
        <activity android:name=".snaphelper.SnapHelperActivity" />
        <activity android:name=".pager.PagerActivity" />
    </application>
</manifest>